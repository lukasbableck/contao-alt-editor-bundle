{
    "name": "lukasbableck/contao-alt-editor-bundle",
    "type": "contao-bundle",
	"description": "This bundle provides an easy way to see which images do not have an alt text and allows you to add them easily.",
	"keywords": [
		"images",
		"alt",
		"seo",
		"accessibility",
		"a11y",
		"wcag",
		"bfsg"
	],
    "license": "LGPL-3.0-or-later",
	"authors": [
		{
			"name": "Lukas Bableck",
			"email": "lukas@bableck.dev",
			"homepage": "https://bableck.dev"
		}
	],
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^5.3",
        "symfony/cache": "^6.4 || ^7.0",
        "symfony/cache-contracts": "^3.0",
        "symfony/config": "^6.4 || ^7.0",
        "symfony/dependency-injection": "^6.4 || ^7.0",
        "symfony/event-dispatcher": "^6.4 || ^7.0",
        "symfony/http-foundation": "^6.4 || ^7.0",
        "symfony/http-kernel": "^6.4 || ^7.0",
        "symfony/routing": "^6.4 || ^7.0",
        "symfony/security-bundle": "^6.4 || ^7.0",
        "symfony/translation-contracts": "^3.0"
    },
	"conflict": {
		"contao/manager-plugin": "<2.0 || >=3.0"
	},
	"require-dev": {
		"contao/manager-plugin": "^2.0",
		"friendsofphp/php-cs-fixer": "^3.57",
		"inspiredminds/contao-file-usage": "^3.2",
        "vincentlanglet/twig-cs-fixer": "^3.5"
	},
	"suggest": {
		"bluebranch/bilder-alt": "Generate alt texts for images using AI.",
		"inspiredminds/contao-file-usage": "Displays whether files are in use or not."
	},
    "autoload": {
        "psr-4": {
            "Lukasbableck\\ContaoAltEditorBundle\\": "src/"
        }
    },
	"extra": {
		"contao-manager-plugin": "Lukasbableck\\ContaoAltEditorBundle\\ContaoManager\\Plugin"
	}
}
